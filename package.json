{
  "name": "electron-webcam-poc",
  "version": "0.0.0",
  "repository": "https://github.com/morenyang/electron-webcam-poc.git",
  "author": "Teng YANG <morenyang@outlook.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start:main": "cross-env NODE_ENV=development electron -r ./scripts/babel-register ./app/main.ts",
    "build:main": "cross-env NODE_ENV=production webpack -c ./webpack.main.config.js"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@types/electron": "^1.6.10",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,json}": "prettier --write"
  }
}
